{
	"info": {
		"_postman_id": "ai-listing-recommendations-api",
		"name": "AI Listing Recommendations API",
		"description": "API collection for AI-powered listing recommendations",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get AI Recommendations",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text",
						"disabled": true
					}
				],
				"url": {
					"raw": "{{base_url}}/api/search/recommendations?limit=10",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"search",
						"recommendations"
					],
					"query": [
						{
							"key": "limit",
							"value": "10",
							"description": "Number of listings to return (default: 10)"
						},
						{
							"key": "city",
							"value": "Ho Chi Minh",
							"description": "City filter (optional)",
							"disabled": true
						},
						{
							"key": "lat",
							"value": "10.8231",
							"description": "Latitude for geo search (optional)",
							"disabled": true
						},
						{
							"key": "lng",
							"value": "106.6297",
							"description": "Longitude for geo search (optional)",
							"disabled": true
						}
					]
				},
				"description": "Get AI-powered listing recommendations based on user location, recent searches, and preferences. Works without auth, but better with auth to access search history."
			},
			"response": []
		},
		{
			"name": "Get AI Recommendations with Location",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text",
						"disabled": true
					}
				],
				"url": {
					"raw": "{{base_url}}/api/search/recommendations?limit=10&lat=10.8231&lng=106.6297",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"search",
						"recommendations"
					],
					"query": [
						{
							"key": "limit",
							"value": "10"
						},
						{
							"key": "lat",
							"value": "10.8231",
							"description": "Latitude"
						},
						{
							"key": "lng",
							"value": "106.6297",
							"description": "Longitude"
						}
					]
				},
				"description": "Get AI recommendations with geo location (within 50km radius)"
			},
			"response": []
		},
		{
			"name": "Get AI Recommendations with City",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/search/recommendations?limit=10&city=Ho Chi Minh",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"search",
						"recommendations"
					],
					"query": [
						{
							"key": "limit",
							"value": "10"
						},
						{
							"key": "city",
							"value": "Ho Chi Minh",
							"description": "City name"
						}
					]
				},
				"description": "Get AI recommendations filtered by city"
			},
			"response": []
		},
		{
			"name": "Save Search History",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text",
						"disabled": true
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"query\": \"apartment giá rẻ\",\n  \"filters\": {\n    \"city\": \"Ho Chi Minh\",\n    \"minPrice\": 1000000,\n    \"maxPrice\": 3000000,\n    \"amenities\": [\"wifi\", \"parking\"]\n  },\n  \"resultsCount\": 25\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/search/history",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"search",
						"history"
					]
				},
				"description": "Save search history (optional auth, but better with auth to link to user)"
			},
			"response": []
		},
		{
			"name": "Get User Search History",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/search/history?limit=20",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"search",
						"history"
					],
					"query": [
						{
							"key": "limit",
							"value": "20",
							"description": "Number of history items (default: 20)"
						}
					]
				},
				"description": "Get user's search history (requires auth)"
			},
			"response": []
		},
		{
			"name": "Delete Search History",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/search/history?query=apartment",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"search",
						"history"
					],
					"query": [
						{
							"key": "query",
							"value": "apartment",
							"description": "Delete specific query (optional, if not provided deletes all)",
							"disabled": true
						}
					]
				},
				"description": "Delete search history. If query param provided, deletes specific query. Otherwise deletes all."
			},
			"response": []
		},
		{
			"name": "Delete All Search History",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/search/history",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"search",
						"history"
					]
				},
				"description": "Delete all search history of the user"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5001",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		}
	]
}

